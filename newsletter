<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            var repo = getRepoDetailsByName("Contact Us Banner");
            if (repo != undefined) {
                var banner = getImageURL(repo.images[0].photo_url);
                $(".inside_banner").css({backgroundImage: "url(" + banner + ")"});
            }
            $('input:checkbox').change(function(){
                if ($("#shark").is(':checked')) {
                    console.log("Cecked")
                    $("#fieldvliutu").val("Yes!");    
                }
            });
            
            $.validate();
            
            show_content();
        }
        loadMallDataCached(renderAll); 
    });
</script>