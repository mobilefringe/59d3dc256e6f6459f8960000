<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            // var repo = getRepoDetailsByName("Promotions Banner");
            // if (repo != undefined) {
            //     var banner = getImageURL(repo.images[0].photo_url);
            //     $(".page_header").css({backgroundImage: "url(" + banner + ")"});
            // }
            
            var promotions = getPromotionsList().sortBy(function(o){ return o.end_date });
            var events = getEventsList().sortBy(function(o){ return o.end_date });
            var promos_events = [];
            $.each(promotions, function(key, val){
                today = moment();
                webDate = moment(val.show_on_web_date)
                if (today.tz(getPropertyTimeZone()) >= webDate.tz(getPropertyTimeZone())) {
                    promos_events.push(val);
                }
            });
            $.each(events, function(key, val){
                today = moment();
                webDate = moment(val.show_on_web_date)
                if (today.tz(getPropertyTimeZone()) >= webDate.tz(getPropertyTimeZone())) {
                    promos_events.push(val);
                }
            });
            if(promos_events.length > 0){
                promos_events.sortBy(function(o){ return o.end_date });
                renderPromotions("#promo_container","#promo_template", promos_events);
                console.log(promos_events)
            } else {
                $('#no_promos').show();
            }
            
            show_content();
        }
        loadMallDataCached(renderAll); 
    });
</script>